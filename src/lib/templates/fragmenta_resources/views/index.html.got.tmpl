<article>
<h1>[[ .Fragmenta_Resources ]]</h1>

<div class="row">
<form accept-charset="UTF-8" action="/[[ .fragmenta_resources ]]" method="get" class="filter_form">
      <input type="search" name="filter" class="right" placeholder="Search..." value="{{ .filter }}">
</form>
</div>

<div class="row">
<table class="data-table">
    {{ $0 := . }}
    {{ template "[[ .fragmenta_resources ]]/views/row.html.got" empty }}
    {{ range $i,$m := .[[ .fragmenta_resources ]] }}
       {{ set $0 "i" $i }}
       {{ set $0 "[[ .fragmenta_resource ]]" $m }}
       {{ template "[[ .fragmenta_resources ]]/views/row.html.got" $0 }}
    {{ end }}
</table>
</div>
</article>